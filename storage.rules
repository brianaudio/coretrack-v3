rules_version = '2';

// Firebase Storage Security Rules for CoreTrack
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload images to their tenant folder
    match /tenants/{tenantId}/products/{allPaths=**} {
      allow read, write: if request.auth != null && 
                         request.auth.uid != null &&
                         isValidImageFile();
    }
    
    // Allow authenticated users to upload user profile images
    match /tenants/{tenantId}/users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                         request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Helper function to validate image files
    function isValidImageFile() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB limit
             request.resource.contentType.matches('image/.*');
    }
  }
}
